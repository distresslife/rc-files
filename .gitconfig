[core]
	editor = vim
[color]
	ui = true
[alias]
	lg = log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	co = checkout
	ci = commit
	st = status
	br = branch
[push]
	default = simple
[merge]
	tool = vimdiff
[user]
	name = left
	email = left@left.tw
